{

  "description": "Princess Princess Copy. When no range selected on page, Ctrl-c copy with template of url, title, or so",
  "manifest_version": 2,
  "name": "prsprscopy",
  "version": "0.1.3",
  "icons": {
    "48": "icons/icon-48_0.png"
  },

  "background": {
    "scripts": [
      "background/background.js"
    ]
  },

  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48_0.png"
    },
    "default_title": "PrsPrsCopy"
  },

  "commands": {
    "PrsPrsCopy": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Addon's Copy key."
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_scripts/textPicker.js"]
    }
  ],
  
  "options_ui": {
    "page": "options_ui/options.html"
  },

  "optional_permissions":[
  ],

  "permissions":[
    "activeTab",
    "clipboardWrite",
    "storage",
    "tabs"
  ]

}
